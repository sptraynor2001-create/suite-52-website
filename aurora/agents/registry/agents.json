      "access": {
        "read": ["dist/**", "package.json"],
        "write": []
      },
      "suggests_next": ["refactorer"]
    },
    {
      "id": "debugger",
      "name": "Debugger",
      "category": "utilities",
      "description": "Find error-prone patterns, analyze stack traces, root cause analysis",
      "tools": ["check-errors"],
      "access": {
        "read": ["src/**/*.{ts,tsx,js,jsx}"],
        "write": []
      },
      "suggests_next": ["quality-reviewer", "test-generator"]
    },
    {
      "id": "tech-doc-maintainer",
