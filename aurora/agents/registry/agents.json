        "read": ["src/**/*.{ts,tsx}"],
        "write": ["src/**/*.{ts,tsx}", "README.md"]
      },
      "suggests_next": []
    },
    {
      "id": "onboarding-guide",
      "name": "Onboarding Guide",
      "category": "documentation",
      "description": "Help new developers get started, explain project structure",
      "tools": [],
      "access": {
        "read": ["README.md", "package.json", "src/**"],
        "write": []
      },
      "suggests_next": []
    },
    {
      "id": "deployment-manager",
      "name": "Deployment Manager",
      "category": "operations",
      "description": "Validate deployment readiness, handle deployments",
      "tools": [],
      "access": {
        "read": ["package.json", ".env*", "dist/**"],
        "write": []
      },
      "suggests_next": ["quality-reviewer", "coverage-analyzer"]
    },
    {
      "id": "coordinator",
      "name": "Coordinator",
      "category": "orchestration",
      "description": "Route tasks to appropriate agents, orchestrate multi-agent workflows",
